---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Services | ${SITE_TITLE}`} description="Web Design, SEO, and Hosting for Trades." />
	</head>
	<body>
		<Header />
		<main class="container page-content">
			<section class="section text-center">
				<h1>Our Services</h1>
				<p class="lead">Everything you need to dominate your local area.</p>
			</section>

			<section id="web-design" class="section service-item">
				<div class="content">
					<h2>Web Design</h2>
					<p>Custom, responsive websites built to convert visitors into paying customers.</p>
					<ul>
						<li>Mobile Friendly</li>
						<li>Fast Loading</li>
						<li>Portfolio Gallery</li>
						<li>Contact Forms</li>
					</ul>
				</div>
				<div class="service-icon">üíª</div>
			</section>

			<section id="seo" class="section service-item reverse">
				<div class="content">
					<h2>Local SEO</h2>
					<p>Get found when people search "Plumber near me" or "Electrician in [City]".</p>
					<ul>
						<li>Google Business Profile Optimization</li>
						<li>Keyword Research</li>
						<li>Content Creation</li>
						<li>Citation Building</li>
					</ul>
				</div>
				<div class="service-icon">üìà</div>
			</section>

			<section id="hosting" class="section service-item">
				<div class="content">
					<h2>Hosting & Support</h2>
					<p>We take care of the tech so you can focus on the job.</p>
					<ul>
						<li>Secure SSL Hosting</li>
						<li>Daily Backups</li>
						<li>Domain Management</li>
						<li>Regular Updates</li>
					</ul>
				</div>
				<div class="service-icon">üõ°Ô∏è</div>
			</section>

			<section class="section cta text-center">
				<h2>Ready to Upgrade?</h2>
				<a href="/pricing" class="btn btn-primary">Check Our Prices</a>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.page-content { padding-top: 100px; }
	.lead { font-size: 1.5rem; color: var(--color-text-muted); text-align: center; }
	
	.service-item {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 4rem;
		margin-bottom: 2rem;
		padding: 3rem;
		background: var(--color-bg-offset);
		border-radius: 1rem;
		border: 1px solid var(--color-border);
	}
	
	.service-item.reverse {
		flex-direction: row-reverse;
	}

	.content { flex: 1; }
	.service-icon {
		font-size: 5rem;
		flex: 0 0 100px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	ul {
		list-style: none;
		padding: 0;
		margin-top: 1.5rem;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	li {
		position: relative;
		padding-left: 1.5rem;
	}

	li::before {
		content: "‚Ä¢";
		color: var(--color-primary);
		position: absolute;
		left: 0;
		font-size: 1.5rem;
		line-height: 1;
	}

	@media (max-width: 768px) {
		.service-item, .service-item.reverse {
			flex-direction: column-reverse;
			text-align: center;
		}
		ul { grid-template-columns: 1fr; text-align: left; }
	}
</style>
