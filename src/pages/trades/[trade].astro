---
import BaseHead from '../../components/BaseHead.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import CTA from '../../components/CTA.astro';
import { SITE_TITLE } from '../../consts';

const tradeNames: Record<string, string> = {
	plumbers: 'Plumbers',
	electricians: 'Electricians',
	builders: 'Builders',
	landscapers: 'Landscapers',
	roofers: 'Roofers',
	carpenters: 'Carpenters',
};

const tradeDescriptions: Record<string, string> = {
	plumbers: 'Get more plumbing jobs with a professional website that showcases your expertise and captures leads 24/7.',
	electricians: 'Stand out from the competition online with a website that builds trust and converts visitors into customers.',
	builders: 'Showcase your projects and get more quotes with a website that highlights your craftsmanship and expertise.',
	landscapers: 'Beautiful image galleries to showcase your work and attract homeowners looking for landscaping services.',
	roofers: 'Professional online presence for roofing businesses that builds trust and generates quality leads.',
	carpenters: 'Showcase your craftsmanship online with a website that highlights your skills and attracts quality clients.',
};

export async function getStaticPaths() {
	const tradeNamesList: Record<string, string> = {
		plumbers: 'Plumbers',
		electricians: 'Electricians',
		builders: 'Builders',
		landscapers: 'Landscapers',
		roofers: 'Roofers',
		carpenters: 'Carpenters',
	};
	const trades = Object.keys(tradeNamesList);
	return trades.map((trade) => ({
		params: { trade },
	}));
}

const { trade } = Astro.params;
const tradeName = trade ? tradeNames[trade] || 'Tradespeople' : 'Tradespeople';
const tradeDescription = trade ? tradeDescriptions[trade] || 'Professional website design for tradespeople.' : 'Professional website design for tradespeople.';
const pageTitle = `Web Design for ${tradeName} | ${SITE_TITLE}`;
const pageDescription = `Professional web design services for ${tradeName.toLowerCase()}. Get more leads with a website that converts.`;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={pageTitle} description={pageDescription} />
	</head>
	<body class="bg-white text-slate-900 font-sans antialiased">
		<Navbar />
		<main class="w-full min-h-screen flex flex-col">
			<!-- Hero Section -->
			<section style="padding: 8rem 0 6rem; background: var(--color-navy-900); position: relative; overflow: hidden;">
