---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const { searchParams } = Astro.url;
const plan = searchParams.get('plan') || '';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Contact Us | ${SITE_TITLE}`} description="Get in touch for a free quote on your trades website." />
	</head>
	<body>
		<Header />
		<main class="container page-content">
			<section class="section text-center">
				<h1>Let's Get Started</h1>
				<p class="lead">Ready to grow your trade business? Fill out the form below.</p>
			</section>

			<div class="contact-wrapper">
				<form class="contact-form" name="contact" method="POST" data-netlify="true">
					<div class="form-group">
						<label for="name">Name</label>
						<input type="text" id="name" name="name" required placeholder="John Smith" />
					</div>
					<div class="form-group">
						<label for="email">Email</label>
						<input type="email" id="email" name="email" required placeholder="john@example.com" />
					</div>
					<div class="form-group">
						<label for="phone">Phone</label>
						<input type="tel" id="phone" name="phone" placeholder="07700 900000" />
					</div>
					<div class="form-group">
						<label for="message">Message</label>
						<textarea id="message" name="message" rows="5" required>{plan ? `I'm interested in the ${plan} package.` : ''}</textarea>
					</div>
					<button type="submit" class="btn btn-primary full-width">Send Message</button>
				</form>

				<div class="contact-info">
					<h3>Contact Details</h3>
					<p><strong>Email:</strong><br>hello@tradesitebuilders.co.uk</p>
					<p><strong>Phone:</strong><br>01234 567 890</p>
					<p><strong>Office:</strong><br>123 High Street, London, UK</p>
					
					<div class="info-card">
						<h4>Why no phone number?</h4>
						<p>Just kidding! Call us anytime. We believe in real humans talking to real humans.</p>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.page-content { padding-top: 100px; }
	.lead { font-size: 1.5rem; color: var(--color-text-muted); margin-bottom: 3rem; }

	.contact-wrapper {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 4rem;
		max-width: 900px;
		margin: 0 auto;
	}

	.contact-form {
		background: var(--color-bg-offset);
		padding: 2.5rem;
		border-radius: 1rem;
		border: 1px solid var(--color-border);
	}

	.form-group {
		margin-bottom: 1.5rem;
	}

	label {
		display: block;
		margin-bottom: 0.5rem;
		font-weight: 500;
		color: var(--color-text);
	}

	input, textarea {
		width: 100%;
		padding: 0.8rem;
		border-radius: 0.5rem;
		border: 1px solid var(--color-border);
		background: rgba(0, 0, 0, 0.2);
		color: white;
		font-family: var(--font-body);
		font-size: 1rem;
	}

	input:focus, textarea:focus {
		border-color: var(--color-primary);
		outline: none;
	}

	.contact-info p {
		margin-bottom: 1.5rem;
		color: var(--color-text-muted);
	}

	.info-card {
		background: rgba(30, 64, 175, 0.1);
		border: 1px solid rgba(30, 64, 175, 0.2);
		padding: 1.5rem;
		border-radius: 0.5rem;
		margin-top: 2rem;
	}

	.info-card h4 { color: var(--color-primary); margin-bottom: 0.5rem; }
	.info-card p { margin-bottom: 0; font-size: 0.9rem; }

	.full-width { width: 100%; }

	@media (max-width: 768px) {
		.contact-wrapper {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
	}
</style>
