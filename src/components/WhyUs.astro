<section id="why-us" class="why-us-section">
  <div class="why-us-container">
    <div class="why-us-grid">
      <div class="why-us-visual">
        <div class="code-card">
          <div class="code-content">
            <div class="code-lines">
              <div>&lt;div class="growth-engine"&gt;</div>
              <div class="code-indent">&lt;h1&gt;More Leads&lt;/h1&gt;</div>
              <div class="code-indent">&lt;button&gt;Call Now&lt;/button&gt;</div>
              <div>&lt;/div&gt;</div>
              <div class="code-spacer"></div>
              <div>// Optimizing conversion rates...</div>
              <div>// Ranking #1 on Google...</div>
            </div>
          </div>
          <div class="code-overlay">
            <span class="code-number">#1</span>
            <span class="code-label">Agency for Trades</span>
          </div>
        </div>
        <div class="gold-accent"></div>
      </div>
      <div class="why-us-content">
        <h2 class="why-us-title">We Speak Your Language, Not Geek Speak</h2>
        <p class="why-us-description">You're busy running a business, managing a team, and getting jobs done. You don't have time to worry about hosting, DNS, or coding. That's where we come in.</p>
        <div class="why-us-list">
          <div class="why-us-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="check-icon">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="m9 12 2 2 4-4"></path>
            </svg>
            <span>No confusing contracts or hidden fees.</span>
          </div>
          <div class="why-us-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="check-icon">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="m9 12 2 2 4-4"></path>
            </svg>
            <span>Direct line to your developer - no support tickets.</span>
          </div>
          <div class="why-us-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="check-icon">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="m9 12 2 2 4-4"></path>
            </svg>
            <span>Fast turnaround times - get live in weeks, not months.</span>
          </div>
          <div class="why-us-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="check-icon">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="m9 12 2 2 4-4"></path>
            </svg>
            <span>We handle all the updates and maintenance.</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .why-us-section {
    padding: 6rem 0;
    background: #f8fafc;
    position: relative;
    overflow: hidden;
  }

  .why-us-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .why-us-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
  }

  .why-us-visual {
    position: relative;
    margin-bottom: 3rem;
  }

  .code-card {
    aspect-ratio: 1;
    border-radius: 1.5rem;
    overflow: hidden;
    background: var(--color-navy-900);
    position: relative;
    z-index: 10;
    background: linear-gradient(to bottom right, var(--color-navy-800), var(--color-navy-900));
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .code-content {
    position: absolute;
    inset: 0;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .code-lines {
    opacity: 0.3;
    font-family: monospace;
    font-size: 0.875rem;
    color: #93c5fd;
    line-height: 1.5;
  }

  .code-indent {
    padding-left: 1rem;
  }

  .code-spacer {
    height: 8rem;
  }

  .code-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .code-number {
    display: block;
    font-size: 6rem;
    font-weight: 900;
    color: rgba(255, 255, 255, 0.1);
  }

  .code-label {
    display: block;
    font-size: 1.5rem;
    font-weight: bold;
    color: white;
    margin-top: 0.5rem;
  }

  .gold-accent {
    position: absolute;
    bottom: -2.5rem;
    right: -2.5rem;
    width: 66.666667%;
    height: 66.666667%;
    background: var(--color-gold-500);
    border-radius: 1.5rem;
    z-index: 0;
    opacity: 0.2;
  }

  .why-us-content h2 {
    font-size: 2.25rem;
    font-weight: bold;
    color: var(--color-navy-900);
    margin-bottom: 1.5rem;
  }

  .why-us-description {
    font-size: 1.125rem;
    color: #475569;
    margin-bottom: 2rem;
    line-height: 1.75;
  }

  .why-us-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .why-us-item {
    display: flex;
    align-items: flex-start;
  }

  .check-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-gold-500);
    margin-right: 1rem;
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .why-us-item span {
    font-size: 1.125rem;
    color: #1e293b;
    font-weight: 500;
  }

  @media (min-width: 1024px) {
    .why-us-grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
    .why-us-visual {
      margin-bottom: 0;
    }
    .why-us-content h2 {
      font-size: 2.5rem;
    }
  }
</style>

<script>
  function waitForGSAP(callback) {
    if (typeof window !== 'undefined' && window.gsap && window.ScrollTrigger) {
      callback();
    } else {
      setTimeout(() => waitForGSAP(callback), 50);
    }
  }

  function initAnimations() {
    gsap.registerPlugin(ScrollTrigger);
    
    // Code card animation
    gsap.from('.code-card', {
      scrollTrigger: {
        trigger: '.why-us-section',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 0,
      scale: 0.8,
      rotation: -5,
      duration: 1,
      ease: 'power3.out'
    });
    
    // Gold accent animation
    gsap.from('.gold-accent', {
      scrollTrigger: {
        trigger: '.why-us-visual',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 0,
      scale: 0,
      duration: 1,
      delay: 0.3,
      ease: 'back.out(1.7)'
    });
    
    // Content animation
    gsap.from('.why-us-content h2', {
      scrollTrigger: {
        trigger: '.why-us-content',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 0,
      x: -50,
      duration: 0.8,
      ease: 'power3.out'
    });
    
    gsap.from('.why-us-description', {
      scrollTrigger: {
        trigger: '.why-us-content',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 0,
      y: 30,
      duration: 0.8,
      delay: 0.2,
      ease: 'power3.out'
    });
    
    // List items animation
    gsap.from('.why-us-item', {
      scrollTrigger: {
        trigger: '.why-us-list',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 0,
      x: -30,
      duration: 0.6,
      stagger: 0.1,
      ease: 'power3.out'
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      waitForGSAP(initAnimations);
    });
  } else {
    waitForGSAP(initAnimations);
  }
</script>

