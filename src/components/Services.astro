<style>
  .services-section {
    padding: 6rem 0;
    background: white;
  }

  .services-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .services-header {
    text-align: center;
    max-width: 48rem;
    margin: 0 auto 4rem;
    opacity: 0;
  }

  .services-label {
    font-size: 1rem;
    font-weight: bold;
    color: var(--color-gold-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .services-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: var(--color-navy-900);
    margin-bottom: 1.5rem;
  }

  .services-description {
    font-size: 1.25rem;
    color: #475569;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .service-card {
    border-radius: 0.75rem;
    border: 1px solid #e2e8f0;
    padding: 2rem;
    height: 100%;
    background: #f8fafc;
    transition: all 0.3s;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    opacity: 0;
  }

  .service-card:hover {
    background: white;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .service-icon {
    width: 3.5rem;
    height: 3.5rem;
    background: var(--color-navy-900);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    color: white;
    transition: all 0.3s;
  }

  .service-card:hover .service-icon {
    background: var(--color-gold-500);
    color: var(--color-navy-900);
  }

  .service-icon svg {
    width: 1.75rem;
    height: 1.75rem;
  }

  .service-title {
    font-size: 1.25rem;
    font-weight: bold;
    color: var(--color-navy-900);
    margin-bottom: 0.75rem;
  }

  .service-description {
    color: #475569;
    line-height: 1.75;
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .services-title {
      font-size: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    .services-title {
      font-size: 3.5rem;
    }
  }
</style>

<script>
  function waitForGSAP(callback) {
    if (typeof window !== 'undefined' && window.gsap && window.ScrollTrigger) {
      callback();
    } else {
      setTimeout(() => waitForGSAP(callback), 50);
    }
  }

  function initAnimations() {
    gsap.registerPlugin(ScrollTrigger);
    
    // Set initial state for elements
    gsap.set('.services-header', { opacity: 0, y: 50 });
    gsap.set('.service-card', { opacity: 0, y: 50 });
    
    // Services header animation
    gsap.to('.services-header', {
      scrollTrigger: {
        trigger: '.services-section',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 1,
      y: 0,
      duration: 1,
      ease: 'power3.out'
    });
    
    // Service cards animation
    gsap.to('.service-card', {
      scrollTrigger: {
        trigger: '.services-grid',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 1,
      y: 0,
      duration: 0.8,
      stagger: 0.1,
      ease: 'power3.out'
    });
    
    // Hover animations
    document.querySelectorAll('.service-card').forEach(card => {
      card.addEventListener('mouseenter', () => {
        gsap.to(card, {
          y: -10,
          duration: 0.3,
          ease: 'power2.out'
        });
      });
      
      card.addEventListener('mouseleave', () => {
        gsap.to(card, {
          y: 0,
          duration: 0.3,
          ease: 'power2.out'
        });
      });
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      waitForGSAP(initAnimations);
    });
  } else {
    waitForGSAP(initAnimations);
  }
</script>

