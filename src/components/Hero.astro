<style>
  .hero {
    position: relative;
    padding: 220px 0 160px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 90vh;
    background: var(--color-bg);
  }

  /* Aurora Background Effect */
  .hero-bg-aurora {
    position: absolute;
    top: -50%;
    left: -50%;
    right: -50%;
    bottom: -50%;
    width: 200%;
    height: 200%;
    background: 
      radial-gradient(circle at 50% 50%, rgba(30, 64, 175, 0.15), transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(249, 115, 22, 0.08), transparent 30%);
    opacity: 0.8;
    filter: blur(80px);
    animation: rotate 20s linear infinite alternate;
    z-index: 0;
  }

  /* Overlay gradient to fade into next section */
  .hero-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 150px;
    background: linear-gradient(to bottom, transparent, var(--color-bg));
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 900px;
  }

  /* Badge */
  .badge {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    margin-bottom: 2rem;
    backdrop-filter: blur(10px);
  }

  .badge span {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Typography */
  h1 {
    font-size: 4.5rem;
    line-height: 1.05;
    margin-bottom: 1.5rem;
    font-weight: 800;
  }

  .highlight-text {
    background: linear-gradient(135deg, var(--color-primary), #4f7cff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  p {
    font-size: 1.35rem;
    color: var(--color-text-muted);
    margin-bottom: 2.5rem;
    max-width: 650px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .cta-group {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-bottom: 4rem;
  }

  .btn-glow {
    box-shadow: 0 0 20px rgba(30, 64, 175, 0.5);
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .btn-glow:hover {
    box-shadow: 0 0 40px rgba(30, 64, 175, 0.7);
  }

  /* Trust Indicators */
  .trust-indicators {
    display: flex;
    justify-content: center;
    gap: 4rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding-top: 3rem;
  }

  .trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .trust-number {
    font-size: 2rem;
    font-weight: 800;
    color: white;
    font-family: var(--font-heading);
  }

  .trust-label {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    z-index: 2;
    opacity: 0.7;
  }

  .scroll-indicator span {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }

  .mouse {
    width: 26px;
    height: 40px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 20px;
    position: relative;
  }

  .wheel {
    width: 2px;
    height: 6px;
    background: white;
    border-radius: 2px;
    position: absolute;
    top: 6px;
    left: 50%;
    transform: translateX(-50%);
    animation: scrollWheel 2s infinite;
  }

  /* Animations */
  @keyframes rotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(10deg); }
  }

  @keyframes scrollWheel {
    0% { transform: translate(-50%, 0); opacity: 1; }
    100% { transform: translate(-50%, 15px); opacity: 0; }
  }

  .delay-1 { animation-delay: 0.1s; animation-fill-mode: forwards; }
  .delay-2 { animation-delay: 0.3s; animation-fill-mode: forwards; }
  .delay-3 { animation-delay: 0.5s; animation-fill-mode: forwards; }
  .delay-4 { animation-delay: 0.7s; animation-fill-mode: forwards; }
  .delay-5 { animation-delay: 1.0s; animation-fill-mode: forwards; }

  @media (max-width: 768px) {
    .hero {
      padding-top: 160px;
    }
    h1 {
      font-size: 3rem;
    }
    .trust-indicators {
      gap: 2rem;
    }
    .trust-number {
      font-size: 1.5rem;
    }
  }
</style>
