<nav class="navbar">
  <div class="navbar-container">
    <a href="/" class="navbar-brand">
      <div class="logo-box">
        <span class="logo-letter">T</span>
      </div>
      <span class="brand-text">The Trade Site <span class="brand-accent">Builders</span></span>
    </a>
    <div class="navbar-links">
      <a href="/">Home</a>
      <a href="/trades">Trades</a>
      <a href="/pricing">Pricing</a>
    </div>
    <button class="mobile-menu-toggle" aria-label="Toggle Menu">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="4" x2="20" y1="12" y2="12"></line>
        <line x1="4" x2="20" y1="6" y2="6"></line>
        <line x1="4" x2="20" y1="18" y2="18"></line>
      </svg>
    </button>
  </div>
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 50;
    background: rgba(10, 25, 47, 0.95);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .navbar-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
  }

  .navbar-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
    text-decoration: none;
    color: inherit;
  }

  .logo-box {
    width: 40px;
    height: 40px;
    background: var(--color-gold-500);
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-letter {
    color: var(--color-navy-900);
    font-weight: bold;
    font-size: 1.25rem;
  }

  .brand-text {
    font-weight: bold;
    color: white;
    font-size: 1.25rem;
    letter-spacing: -0.02em;
  }

  .brand-accent {
    color: var(--color-gold-500);
  }

  .navbar-links {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }

  .navbar-links a:not(.btn-phone) {
    color: #d1d5db;
    font-size: 1rem;
    font-weight: 600;
    padding: 0.5rem 0;
    transition: color 0.2s;
    position: relative;
  }

  .navbar-links a:not(.btn-phone):hover {
    color: white;
  }

  .navbar-links a:not(.btn-phone)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-gold-500);
    transition: width 0.3s ease;
  }

  .navbar-links a:not(.btn-phone):hover::after {
    width: 100%;
  }

  .btn-phone {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    white-space: nowrap;
    font-size: 0.875rem;
    font-weight: 600;
    transition: all 0.2s;
    padding: 0.5rem 1.5rem;
    height: 36px;
    background: var(--color-gold-500);
    color: var(--color-navy-900);
    border-radius: 9999px;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }

  .btn-phone:hover {
    background: var(--color-gold-600);
  }

  .icon-phone {
    width: 16px;
    height: 16px;
    margin-right: 0.5rem;
  }

  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: 0.5rem;
  }

  @media (max-width: 768px) {
    .navbar-links {
      position: fixed;
      top: 80px;
      left: 0;
      right: 0;
      background: rgba(10, 25, 47, 0.98);
      backdrop-filter: blur(12px);
      flex-direction: column;
      padding: 2rem 1rem;
      gap: 1.5rem;
      transform: translateY(-100%);
      opacity: 0;
      visibility: hidden;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .navbar-links.mobile-open {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
    }

    .mobile-menu-toggle {
      display: block;
    }
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
  const navbarLinks = document.querySelector('.navbar-links');

  if (mobileMenuToggle && navbarLinks) {
    mobileMenuToggle.addEventListener('click', () => {
      navbarLinks.classList.toggle('mobile-open');
      
      // Toggle hamburger icon to X
      const isOpen = navbarLinks.classList.contains('mobile-open');
      if (isOpen) {
        mobileMenuToggle.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        `;
      } else {
        mobileMenuToggle.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="4" x2="20" y1="12" y2="12"></line>
            <line x1="4" x2="20" y1="6" y2="6"></line>
            <line x1="4" x2="20" y1="18" y2="18"></line>
          </svg>
        `;
      }
    });

    // Close menu when clicking a link
    navbarLinks.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        navbarLinks.classList.remove('mobile-open');
        mobileMenuToggle.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="4" x2="20" y1="12" y2="12"></line>
            <line x1="4" x2="20" y1="6" y2="6"></line>
            <line x1="4" x2="20" y1="18" y2="18"></line>
          </svg>
        `;
      });
    });
  }

  // Scroll-based navbar background
  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;
    const navbar = document.querySelector('.navbar');
    
    if (navbar) {
      if (currentScroll > 100) {
        navbar.style.backgroundColor = 'rgba(10, 25, 47, 0.98)';
        navbar.style.backdropFilter = 'blur(12px)';
      } else {
        navbar.style.backgroundColor = 'rgba(10, 25, 47, 0.95)';
        navbar.style.backdropFilter = 'blur(8px)';
      }
    }
  });
</script>

