<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 50;
    background: rgba(10, 25, 47, 0.95);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .navbar-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
  }

  .navbar-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .logo-box {
    width: 40px;
    height: 40px;
    background: var(--color-gold-500);
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-letter {
    color: var(--color-navy-900);
    font-weight: bold;
    font-size: 1.25rem;
  }

  .brand-text {
    font-weight: bold;
    color: white;
    font-size: 1.25rem;
    letter-spacing: -0.02em;
  }

  .brand-accent {
    color: var(--color-gold-500);
  }

  .navbar-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .navbar-links a:not(.btn-phone) {
    color: #d1d5db;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .navbar-links a:not(.btn-phone):hover {
    color: white;
  }

  .btn-phone {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    white-space: nowrap;
    font-size: 0.875rem;
    font-weight: 600;
    transition: all 0.2s;
    padding: 0.5rem 1.5rem;
    height: 36px;
    background: var(--color-gold-500);
    color: var(--color-navy-900);
    border-radius: 9999px;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }

  .btn-phone:hover {
    background: var(--color-gold-600);
  }

  .icon-phone {
    width: 16px;
    height: 16px;
    margin-right: 0.5rem;
  }

  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: 0.5rem;
  }

  @media (max-width: 768px) {
    .navbar-links {
      display: none;
    }
    .mobile-menu-toggle {
      display: block;
    }
  }
</style>

<script>
  function waitForGSAP(callback) {
    if (typeof window !== 'undefined' && window.gsap && window.ScrollTrigger) {
      callback();
    } else {
      setTimeout(() => waitForGSAP(callback), 50);
    }
  }

  function initAnimations() {
    gsap.registerPlugin(ScrollTrigger);
    
    // Navbar entrance animation
    gsap.from('.navbar', {
      y: -100,
      opacity: 0,
      duration: 0.8,
      ease: 'power3.out'
    });
    
    // Navbar brand animation
    gsap.from('.navbar-brand', {
      x: -30,
      opacity: 0,
      duration: 0.6,
      delay: 0.2,
      ease: 'power3.out'
    });
    
    // Navbar links animation
    gsap.from('.navbar-links a', {
      y: -20,
      opacity: 0,
      duration: 0.5,
      stagger: 0.1,
      delay: 0.4,
      ease: 'power3.out'
    });
    
    // Scroll-based navbar background
    let lastScroll = 0;
    window.addEventListener('scroll', () => {
      const currentScroll = window.scrollY;
      const navbar = document.querySelector('.navbar');
      
      if (currentScroll > 100) {
        gsap.to(navbar, {
          backgroundColor: 'rgba(10, 25, 47, 0.98)',
          backdropFilter: 'blur(12px)',
          duration: 0.3
        });
      } else {
        gsap.to(navbar, {
          backgroundColor: 'rgba(10, 25, 47, 0.95)',
          backdropFilter: 'blur(8px)',
          duration: 0.3
        });
      }
      
      lastScroll = currentScroll;
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      waitForGSAP(initAnimations);
    });
  } else {
    waitForGSAP(initAnimations);
  }
</script>

