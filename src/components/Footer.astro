</footer>

<style>
	.site-footer {
		background: var(--color-navy-900);
		padding-top: 4rem;
		padding-bottom: 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
	}

	.footer-container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 3rem;
		margin-bottom: 3rem;
	}

	.footer-logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
	}

	.footer-logo-box {
		width: 2rem;
		height: 2rem;
		background: var(--color-gold-500);
		border-radius: 0.25rem;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.footer-logo-letter {
		color: var(--color-navy-900);
		font-weight: bold;
	}

	.footer-brand-text {
		font-weight: bold;
		color: white;
		font-size: 1.125rem;
	}

	.footer-brand-accent {
		color: var(--color-gold-500);
	}

	.footer-description {
		color: #9ca3af;
		font-size: 0.875rem;
		line-height: 1.75;
	}

	.footer-heading {
		color: white;
		font-weight: bold;
		margin-bottom: 1rem;
	}

	.footer-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer-list a {
		color: #9ca3af;
		font-size: 0.875rem;
		transition: color 0.2s;
	}

	.footer-list a:hover {
		color: var(--color-gold-500);
	}

	.footer-view-more {
		display: inline-block;
		margin-top: 1rem;
		color: var(--color-gold-500);
		font-size: 0.875rem;
		font-weight: 600;
		transition: color 0.2s;
		text-decoration: none;
	}

	.footer-view-more:hover {
		color: var(--color-gold-400);
	}

	.footer-phone {
		color: var(--color-gold-500);
		font-size: 1.5rem;
		font-weight: bold;
		margin-bottom: 0.5rem;
	}

	.footer-email {
		color: #9ca3af;
		font-size: 0.875rem;
	}

	.footer-copyright {
		border-top: 1px solid rgba(255, 255, 255, 0.05);
		padding-top: 2rem;
		text-align: center;
		color: #4b5563;
		font-size: 0.875rem;
	}

	@media (min-width: 768px) {
		.footer-grid {
			grid-template-columns: repeat(4, 1fr);
		}
	}
</style>

<script>
	function waitForGSAP(callback) {
		if (typeof window !== 'undefined' && window.gsap && window.ScrollTrigger) {
			callback();
		} else {
			setTimeout(() => waitForGSAP(callback), 50);
		}
	}

	function initAnimations() {
		gsap.registerPlugin(ScrollTrigger);
		
		// Footer animation
		gsap.from('.footer-grid > *', {
			scrollTrigger: {
				trigger: '.site-footer',
				start: 'top 80%',
				toggleActions: 'play none none none'
			},
			opacity: 0,
			y: 50,
			duration: 0.8,
			stagger: 0.1,
			ease: 'power3.out'
		});
		
		// Footer copyright animation
		gsap.from('.footer-copyright', {
			scrollTrigger: {
				trigger: '.site-footer',
				start: 'top 80%',
				toggleActions: 'play none none none'
			},
			opacity: 0,
			y: 20,
			duration: 0.6,
			delay: 0.4,
			ease: 'power3.out'
		});
	}

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', () => {
			waitForGSAP(initAnimations);
		});
	} else {
		waitForGSAP(initAnimations);
	}
</script>
