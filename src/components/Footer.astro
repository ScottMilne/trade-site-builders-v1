---
import { getLocations } from '../utils/seo-data';

const today = new Date();
const locations = getLocations();
const footerLocations = locations.slice(0, 4);
---

<footer class="site-footer">
	<div class="footer-container">
		<div class="footer-grid">
			<div class="footer-brand">
				<span class="footer-brand-text">Trade Site <span class="footer-brand-accent">Builders</span></span>
				<p class="footer-description">Specialised web design for tradespeople helping to grow their business and get more calls.</p>
			</div>
			
			<div class="footer-links">
				<h2 class="footer-heading">Trades</h2>
				<ul class="footer-list">
					<li><a href="/trades/plumbers">Plumbers</a></li>
					<li><a href="/trades/electricians">Electricians</a></li>
					<li><a href="/trades/builders">Builders</a></li>
					<li><a href="/trades/landscapers">Landscapers</a></li>
				</ul>
				<a href="/trades" class="footer-view-more">View More →</a>
			</div>

			<div class="footer-links">
				<h2 class="footer-heading">Areas Served</h2>
				<ul class="footer-list">
					{footerLocations.map((location) => (
						<li><a href={`/locations/${location.slug}`}>{location.name}</a></li>
					))}
				</ul>
				<a href="/locations" class="footer-view-more">View More →</a>
			</div>

			<div class="footer-links">
				<h2 class="footer-heading">Company</h2>
				<ul class="footer-list">
					<li><a href="/pricing">Pricing</a></li>
					<li><a href="/our-work">Our Work</a></li>
				</ul>
			</div>

			<div class="footer-contact">
				<h2 class="footer-heading">Contact Us</h2>
				<a href="tel:07700171266" class="footer-phone">07700 171 266</a>
				<a href="mailto:info@thetradesitebuilders.com" class="footer-email">info@thetradesitebuilders.com</a>
			</div>
		</div>
		<div class="footer-copyright">
			&copy; {today.getFullYear()} The Trade Site Builders. All rights reserved.
		</div>
	</div>
</footer>

<style>
	.site-footer {
		background: var(--color-navy-900);
		padding-top: 4rem;
		padding-bottom: 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
	}

	.footer-container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 3rem;
		margin-bottom: 3rem;
	}

	.footer-brand-text {
		font-weight: bold;
		color: white;
		font-size: 1.125rem;
		margin-bottom: 1.5rem;
		display: block;
	}

	.footer-brand-accent {
		color: var(--color-gold-500);
	}

	.footer-description {
		color: #9ca3af;
		font-size: 0.875rem;
		line-height: 1.75;
	}

	.footer-heading {
		color: white;
		font-weight: bold;
		margin-bottom: 1rem;
		font-size: 1rem;
	}

	.footer-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer-list a {
		color: #9ca3af;
		font-size: 0.875rem;
		transition: color 0.2s;
	}

	.footer-list a:hover {
		color: var(--color-gold-500);
	}

	.footer-view-more {
		display: inline-block;
		margin-top: 1rem;
		color: var(--color-gold-500);
		font-size: 0.875rem;
		font-weight: 600;
		transition: color 0.2s;
		text-decoration: none;
	}

	.footer-view-more:hover {
		color: var(--color-gold-600);
	}

	.footer-phone {
		color: var(--color-gold-500);
		font-size: 1.5rem;
		font-weight: bold;
		margin-bottom: 0.5rem;
		text-decoration: none;
		display: inline-block;
		transition: color 0.2s;
	}

	.footer-phone:hover {
		color: var(--color-gold-600);
	}

	.footer-email {
		color: #9ca3af;
		font-size: 0.875rem;
		text-decoration: none;
		display: inline-block;
		transition: color 0.2s;
	}

	.footer-email:hover {
		color: var(--color-gold-500);
	}

	.footer-copyright {
		border-top: 1px solid rgba(255, 255, 255, 0.05);
		padding-top: 2rem;
		text-align: center;
		color: #4b5563;
		font-size: 0.875rem;
	}

	@media (min-width: 768px) {
		.footer-grid {
			grid-template-columns: repeat(5, 1fr);
		}
	}
</style>

<script>
	function waitForGSAP(callback) {
		if (typeof window !== 'undefined' && window.gsap && window.ScrollTrigger) {
			callback();
		} else {
			setTimeout(() => waitForGSAP(callback), 50);
		}
	}

	function initAnimations() {
		gsap.registerPlugin(ScrollTrigger);
		
		// Footer animation
		gsap.from('.footer-grid > *', {
			scrollTrigger: {
				trigger: '.site-footer',
				start: 'top 80%',
				toggleActions: 'play none none none'
			},
			opacity: 0,
			y: 50,
			duration: 0.8,
			stagger: 0.1,
			ease: 'power3.out'
		});
		
		// Footer copyright animation
		gsap.from('.footer-copyright', {
			scrollTrigger: {
				trigger: '.site-footer',
				start: 'top 80%',
				toggleActions: 'play none none none'
			},
			opacity: 0,
			y: 20,
			duration: 0.6,
			delay: 0.4,
			ease: 'power3.out'
		});
	}

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', () => {
			waitForGSAP(initAnimations);
		});
	} else {
		waitForGSAP(initAnimations);
	}
</script>
