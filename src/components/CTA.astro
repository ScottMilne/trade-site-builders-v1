<section class="cta-section">
  <div class="cta-pattern"></div>
  <div class="cta-container">
    <h2 class="cta-title">Ready To Get More Jobs?</h2>
    <p class="cta-description">Your new high-performance website is just a phone call away. Let's discuss your business and how we can help you grow.</p>
    <div class="cta-buttons">
      <a href="tel:07700171266" class="cta-phone-button">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="phone-icon">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
        </svg>
        07700 171 266
      </a>
      <button class="cta-secondary-button">
        Request a Callback
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="arrow-icon">
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </button>
    </div>
    <p class="cta-note">No pressure. No sales pitch. Just a chat about your goals.</p>
  </div>
</section>

<style>
  .cta-section {
    padding: 6rem 0;
    background: var(--color-navy-900);
    position: relative;
    overflow: hidden;
  }

  .cta-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.1;
    background-image: radial-gradient(rgb(251, 191, 36) 1px, transparent 1px);
    background-size: 30px 30px;
  }

  .cta-container {
    max-width: 64rem;
    margin: 0 auto;
    padding: 0 1rem;
    text-align: center;
    position: relative;
    z-index: 10;
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: white;
    margin-bottom: 1.5rem;
  }

  .cta-description {
    font-size: 1.25rem;
    color: #bfdbfe;
    margin-bottom: 2.5rem;
    max-width: 42rem;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .cta-phone-button {
    display: flex;
    align-items: center;
    background: var(--color-gold-500);
    color: var(--color-navy-900);
    font-size: 1.25rem;
    font-weight: bold;
    padding: 1.5rem 2.5rem;
    border-radius: 9999px;
    transition: all 0.2s;
    box-shadow: 0 20px 25px -5px rgba(251, 191, 36, 0.2);
  }

  .cta-phone-button:hover {
    background: var(--color-gold-600);
    transform: scale(1.05);
  }

  .phone-icon {
    width: 1.5rem;
    height: 1.5rem;
    margin-right: 0.75rem;
  }

  .cta-phone-button:hover .phone-icon {
    animation: bounce 1s infinite;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  .cta-secondary-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    white-space: nowrap;
    font-weight: 500;
    transition: all 0.2s;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: transparent;
    color: white;
    border-radius: 9999px;
    padding: 1.5rem 2.5rem;
    font-size: 1.125rem;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    cursor: pointer;
  }

  .cta-secondary-button:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .arrow-icon {
    width: 1.25rem;
    height: 1.25rem;
    margin-left: 0.5rem;
  }

  .cta-note {
    margin-top: 2rem;
    font-size: 0.875rem;
    color: #6b7280;
  }

  @media (min-width: 768px) {
    .cta-buttons {
      flex-direction: row;
    }
    .cta-title {
      font-size: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .cta-title {
      font-size: 3.5rem;
    }
  }
</style>

<script>
  function waitForGSAP(callback) {
    if (typeof window !== 'undefined' && window.gsap && window.ScrollTrigger) {
      callback();
    } else {
      setTimeout(() => waitForGSAP(callback), 50);
    }
  }

  function initAnimations() {
    gsap.registerPlugin(ScrollTrigger);
    
    // CTA section animation
    gsap.from('.cta-container', {
      scrollTrigger: {
        trigger: '.cta-section',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 0,
      y: 50,
      duration: 1,
      ease: 'power3.out'
    });
    
    // Title animation
    gsap.from('.cta-title', {
      scrollTrigger: {
        trigger: '.cta-section',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 0,
      y: 30,
      duration: 0.8,
      ease: 'power3.out'
    });
    
    // Description animation
    gsap.from('.cta-description', {
      scrollTrigger: {
        trigger: '.cta-section',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 0,
      y: 30,
      duration: 0.8,
      delay: 0.2,
      ease: 'power3.out'
    });
    
    // Buttons animation
    gsap.from('.cta-buttons', {
      scrollTrigger: {
        trigger: '.cta-section',
        start: 'top 80%',
        toggleActions: 'play none none none'
      },
      opacity: 0,
      y: 30,
      duration: 0.8,
      delay: 0.4,
      ease: 'power3.out'
    });
    
    // Button hover animations
    const phoneButton = document.querySelector('.cta-phone-button');
    if (phoneButton) {
      phoneButton.addEventListener('mouseenter', () => {
        gsap.to(phoneButton, {
          scale: 1.05,
          duration: 0.3,
          ease: 'power2.out'
        });
        gsap.to(phoneButton.querySelector('.phone-icon'), {
          rotation: 15,
          duration: 0.3,
          ease: 'power2.out'
        });
      });
      
      phoneButton.addEventListener('mouseleave', () => {
        gsap.to(phoneButton, {
          scale: 1,
          duration: 0.3,
          ease: 'power2.out'
        });
        gsap.to(phoneButton.querySelector('.phone-icon'), {
          rotation: 0,
          duration: 0.3,
          ease: 'power2.out'
        });
      });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      waitForGSAP(initAnimations);
    });
  } else {
    waitForGSAP(initAnimations);
  }
</script>

